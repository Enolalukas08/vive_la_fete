<div class="container">
  <div class="row-show">
    <h2 class="card-title"><%=@article.name%></h2>
        <div class="col-md-4">
            <div class="card" style="width: 25rem;">
              <% if @article.photo.present? %>
                <%= cl_image_tag @article.photo.key, height: 300, width: 300, crop: :fill %>
              <% else %>
                <%= image_tag "logo.png" %>
              <% end %>
            <div class="card-body">
              <p class="card-text"><%=@article.description%></p>
              <p class="card-text"><%=@article.price%></p>
              <p class="card-text"><%=@article.user.first_name%></p>
            </div>
          </div>
        </div>
        <div class=col-md-8>
          

        </div>
  </div>
</div>
