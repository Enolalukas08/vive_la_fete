<h1>Ceci est un index</h1>
<div class=row>
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
          <% if article.photo.present? %>
            <%= cl_image_tag article.photo.key, height: 300, crop: :fill, cloud_name: 'dpjincxmo', sign_url: true %>
          <% else %>
            <%= image_tag "logo.png" %>
          <% end %>
        <div class="card-body">
            <h5 class="card-title"><%=article.name%></h5>
            <p class="card-text"><%=truncate(article.description, length: 70, separator: ' ', omission: '...')%></p>
            <p class="card-text"><%=article.price%> â‚¬</p>
            <p class="card-text"><%=article.user.first_name%></p>
            <%= link_to 'View More', article_path(article), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
