<h1>Ceci est un index</h1>
<div class=row>
  <% @articles.each do |article| %>
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
          <%# if <%= cl_image_tag article.photo.key, height: 300, width: 400, crop: :fill %>
          <%# ELSE AFFICHER UNE IMAGE GÉNÉRIQUE/PAR DEFAUT%>
        <div class="card-body">
            <h5 class="card-title"><%=article.name%></h5>
            <p class="card-text"><%=truncate(article.description, length: 70, separator: ' ', omission: '...')%></p>
            <p class="card-text"><%=article.price%> €</p>
            <p class="card-text"><%=article.user.first_name%></p>
            <%= link_to 'View More', article_path(article), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
