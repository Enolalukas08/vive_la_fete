<h1 class='card-title text-center'>Nouvel article</h1>
<%= simple_form_for @article do |f| %>
  <%= f.input :name,
                required: true,
                label: "Nom",
                hint: " 15 caractÃ¨res maximum",
                input_html: { maxlength: 15, size: 40} %>
