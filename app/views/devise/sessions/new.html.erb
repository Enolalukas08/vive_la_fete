<h2>Se connecter</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "Email" } %>
    <%= f.input :password,
                required: false,
                label: "Mot de passe",
                input_html: { autocomplete: "" } %>
    <%= f.input :remember_me, label: "Rester connectÃ©", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Connexion" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
